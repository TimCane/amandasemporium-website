---
import AlphabetButtons from "@/components/bears/alphabet-buttons.astro";
import Block from "@/components/ui/block.astro";
import Container from "@/components/ui/container.astro";
import PageLayout from "@/layouts/page.layout.astro";
import { bearNamesAlphabet } from "@/libs/alphabet";
import { cn } from "@/libs/class-name";
import { Image } from "astro:assets";

const alphabet = await bearNamesAlphabet("rescued");
import ClickALetter from "@/images/click-a-letter.svg";
---

<PageLayout
    title="Bears who found their home"
    heading="Bears who found their home"
    subText="..."
>
    <Container>
        <Block>
            <AlphabetButtons
                alphabet={alphabet}
                url="/bears/looking-for-their-home/"
            />
        </Block>

        <Block>
            <div class="flex items-center justify-center">
                <Image
                    src={ClickALetter}
                    alt="Click a letter"
                    class="-rotate-3"
                />
            </div>
        </Block>
    </Container>
</PageLayout>
