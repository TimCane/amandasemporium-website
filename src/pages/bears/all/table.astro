---
import Block from "@/components/ui/block.astro";
import Container from "@/components/ui/container.astro";
import PageLayout from "@/layouts/page.layout.astro";
import { bearNamesAlphabet } from "@/libs/alphabet";

import AlphabetButtons from "@/components/bears/alphabet-buttons.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import BearsTable from "@/components/bears/bears-table.astro";

const alphabet = await bearNamesAlphabet(() => true);

const bears: CollectionEntry<"bears">[] = await getCollection("bears");
---

<PageLayout title="All my bears" heading="All my bears" subText="...">
    <Container>
        <Block>
            <AlphabetButtons alphabet={alphabet} url="/bears/all/" />
        </Block>

        <Block>
            <BearsTable
                bears={bears}
                hideEventCol={false}
                hideRehomedCol={false}
            />
        </Block>
    </Container>
</PageLayout>
