---
import { Image } from "astro:assets";
import Logo from "@/images/logo.svg";
import { Menu } from "lucide-react";
import { cn } from "@/libs/class-name";
import Container from "../ui/container.astro";

interface Props {
    url: string;
}

const { url }: Props = Astro.props;

interface Link {
    href: string;
    label: string;
}

const links: Link[] = [
    {
        href: "/bears",
        label: "My Little Bears",
    },
    {
        href: "/events",
        label: "Where to Find Me",
    },
    {
        href: "/products",
        label: "Things I Sell",
    },
    {
        href: "/contact",
        label: "Get In Touch",
    },
];
---

<nav-bar>
    <Container>
        <div
            class="flex flex-wrap items-center justify-center lg:justify-between gap-4"
        >
            <div class="flex-grow flex justify-center lg:justify-start">
                <a class="" href="/">
                    <Image
                        src={Logo}
                        alt="Amanda's Emporium logo"
                        height={75}
                    />
                </a>
            </div>

            <ul
                class="list-none flex flex-wrap items-center justify-center flex-row select-none gap-x-8 gap-y-4"
            >
                {
                    links &&
                        links.map(({ label, href }) => (
                            <li>
                                <a
                                    href={href}
                                    class={cn(
                                        "block font-medium hover:text-mandy-500",
                                        {
                                            "transition-all duration-200 underline-offset-8 decoration-wavy underline decoration-2 decoration-mandy-500":
                                                url == href,
                                        },
                                    )}
                                >
                                    <span>{label}</span>
                                </a>
                            </li>
                        ))
                }
            </ul>
        </div>
    </Container>
</nav-bar>
